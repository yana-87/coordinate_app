<style>
  @media (max-width: 768px) {
    .coordinate-form {
      padding: 10px;
    }

    .coordinate-form h1 {
      font-size: 1.5rem;
    }

    .coordinate-form .form-group {
      margin-bottom: 15px;
    }

    .coordinate-form .form-submit-button {
      font-size: 1rem;
      padding: 8px 16px;
    }
  }
</style>

<%= form_with(model: coordinate, html: { class: 'coordinate-form' }) do |form| %>
  <div style="max-width: 600px; margin: 0 auto; padding: 20px; background-color: #f9f9f9; border: 1px solid #ddd; border-radius: 8px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);">

    <div class="form-group" style="margin-bottom: 20px;">
      <%= form.label :title, "タイトル", style: "display: block; font-weight: bold; margin-bottom: 5px;" %>
      <%= form.text_field :title, style: "width: 100%; padding: 10px; border: 1px solid #ccc; border-radius: 5px; box-sizing: border-box;" %>
    </div>

    <div class="form-group" style="margin-bottom: 20px;">
      <%= form.label :memo, "メモ", style: "display: block; font-weight: bold; margin-bottom: 5px;" %>
      <%= form.text_area :memo, style: "width: 100%; height: 100px; padding: 10px; border: 1px solid #ccc; border-radius: 5px; resize: vertical; box-sizing: border-box;" %>
    </div>

    <div class="form-group" style="margin-bottom: 20px;">
      <%= form.label :image, "画像", style: "display: block; font-weight: bold; margin-bottom: 5px;" %>
      <%= form.file_field :image, style: "width: 100%; padding: 5px; border: 1px solid #ccc; border-radius: 5px; box-sizing: border-box;" %>

      <% if coordinate.errors[:image].any? %>
        <div class="field-error" style="color: red; font-size: 0.9rem; margin-top: 5px;">
          <%= coordinate.errors[:image].first %>
        </div>
      <% end %>
    </div>

    <div style="text-align: center;">
      <%= form.submit "保存", class: "form-submit-button", style: "background-color: #007bff; color: white; padding: 10px 20px; border: none; border-radius: 5px; font-size: 16px; cursor: pointer; transition: background-color 0.3s ease;" %>
    </div>
  </div>
<% end %>
